{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true
  },
  "plugins": [
    "flowtype",
    "react",
    "prettier",
    "jest"
  ],
  "rules": {
    "react/jsx-uses-vars": 1,
    "prettier/prettier": "error"
  }
}
