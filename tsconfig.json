{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "rootDir": "ts",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "strict": false,
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true
  },
  "lib": [ "dom", "es2015", "es2016" ],
  "include": [
    "ts/**/*.ts",
    "ts/**/*.tsx"
  ],
  "exclude": [
    "android",
    "ios",
    "node_modules"
  ]
}
